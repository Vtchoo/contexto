{
  "name": "contexto-monorepo",
  "version": "1.0.0",
  "description": "Contexto Game Monorepo",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/core",
    "packages/server",
    "packages/web",
    "packages/bot",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "setup": "npm run setup -w @contexto/core",
    "start:server": "npm start -w @contexto/server",
    "start:bot": "npm start -w @contexto/bot",
    "start:web": "npm start -w @contexto/web",
    "start:cli": "npm start -w @contexto/cli",
    "dev:server": "npm run dev -w @contexto/server",
    "dev:bot": "npm run dev -w @contexto/bot",
    "dev:web": "npm run dev -w @contexto/web",
    "dev:cli": "npm run dev -w @contexto/cli",
    "build:shared": "npm run build -w @contexto/shared",
    "build:server": "npm run build -w @contexto/server",
    "build:bot": "npm run build -w @contexto/bot",
    "build:web": "npm run build -w @contexto/web",
    "build:cli": "npm run build -w @contexto/cli"
  },
  "keywords": ["contexto", "game", "multiplayer", "discord", "web"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
